{% extends 'base.html.twig' %}

{% block title %}
	{{ page.title }}
	- CHM Saleux
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/pages/' ~ page.slug ~ '.css') }}">
{% endblock %}

{% block body %}
	<header class="hero-header">
		<div class="overlay"></div>
		<div class="hero-content">
			<h1>{{ page.title }}</h1>
		</div>
	</header>

	<section class="page-section">
		{{ page.content|raw }}
	</section>

{% endblock %}
