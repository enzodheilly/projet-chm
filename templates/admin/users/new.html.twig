{% extends 'admin/base_admin.html.twig' %}

{% block title %}Nouvel utilisateur
{% endblock %}

{% block stylesheets %}
	<style>
	/* ------------------------- PAGE AJOUT UTILISATEUR ------------------------- */:root
	{
		--bg-dark: #0e0e10;
		--bg-light: #1c1c1f;
		--text-main: #e5e7eb;
		--accent: #ff6600;
		--border: #2a2a2d;
	}

	body {
		font-family: "Poppins", system-ui, sans-serif;
		background: var(--bg-dark);
		color: var(--text-main);
		margin: 0;
		padding: 0;
	}

	.form-container {
		max-width: 520px;
		margin: 3rem auto;
		padding: 2rem 2.5rem;
		background: var(--bg-light);
		border: 1px solid var(--border);
		box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
		transition: all 0.3s ease;
	}

	.form-container:hover {
		box-shadow: 0 0 25px rgba(255, 102, 0, 0.1);
	}

	.form-container h1 {
		font-size: 1.9rem;
		font-weight: 700;
		margin-bottom: 1.8rem;
		color: #fff;
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	form div {
		margin-bottom: 1.2rem;
	}

	/* Champs du formulaire */
	input[type="text"],
	input[type="email"],
	input[type="password"],
	select {
		width: 100%;
		padding: 0.7rem 1rem;
		border: 1px solid var(--border);
		background: var(--bg-dark);
		color: var(--text-main);
		font-size: 1rem;
		transition: border-color 0.2s, background 0.2s;
	}

	input:focus,
	select:focus {
		outline: none;
		border-color: var(--accent);
		background: #1f1f22;
	}

	/* Bouton principal */
	button[type="submit"] {
		width: 100%;
		padding: 0.8rem 1rem;
		border: none;
		background: var(--accent);
		color: #fff;
		font-weight: 600;
		font-size: 1rem;
		cursor: pointer;
		transition: background 0.2s ease, transform 0.1s ease;
	}

	button[type="submit"]:hover {
		background: #e25500;
		transform: translateY(-2px);
	}

	/* Lien retour */
	.back-link {
		display: inline-block;
		margin-top: 1.4rem;
		color: var(--text-main);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.back-link:hover {
		color: var(--accent);
	}

	/* Animation légère */
	@keyframes fadeIn {
		from {
			opacity: 0;
			transform: translateY(10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.form-container {
		animation: fadeIn 0.4s ease-out;
	}
</style>{% endblock %}{% block body %}
<div class="form-container">
	<h1>➕ Ajouter un utilisateur</h1>

	{{ form_start(form) }}
	{{ form_row(form.firstName) }}
	{{ form_row(form.lastName) }}
	{{ form_row(form.email) }}
	{{ form_row(form.password) }}
	{{ form_row(form.roles) }}
	<button type="submit">Créer</button>
	{{ form_end(form) }}

	<a href="{{ path('admin_users_index') }}" class="back-link">← Retour</a>
</div>{% endblock %}
