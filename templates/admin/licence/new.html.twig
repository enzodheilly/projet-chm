{% extends 'admin/base_admin.html.twig' %}

{% block title %}‚ûï Ajouter une licence
{% endblock %}

{% block stylesheets %}
	<style>:root
	{
		--bg-dark: #0e0e10;
		--bg-darker: #141416;
		--bg-light: #1c1c1f;
		--text-main: #e5e7eb;
		--text-muted: #9ca3af;
		--accent: #ff6600;
		--border: #2a2a2d;
		--success: #22c55e;
	}

	body {
		font-family: "Inter", system-ui, sans-serif;
		background: var(--bg-dark);
		color: var(--text-main);
		margin: 0;
		min-height: 100vh;
	}

	.main-content {
		flex: 1;
		margin-left: 100px;
		padding: 2.5rem 3rem;
		display: flex;
		flex-direction: column;
		background: var(--bg-dark);
		min-height: 100vh;
	}

	.dashboard-container {
		transform: scale(1.00);
		transform-origin: top left;
		width: 158%;
		margin-left: 1.5rem;
	}

	h1 {
		font-size: 2.3rem;
		font-weight: 800;
		color: #fff;
		margin-bottom: 2.5rem;
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.section-card {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 1.8rem;
		max-width: 800px;
	}

	label {
		display: block;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--text-main);
	}

	input[type="text"],
	input[type="email"],
	textarea,
	select {
		width: 95%;
		background: var(--bg-darker);
		color: var(--text-main);
		border: 1px solid var(--border);
		padding: 0.7rem 1rem;
		font-size: 0.95rem;
		outline: none;
		transition: border-color 0.2s ease;
	}

	input[type="text"]:focus,
	input[type="email"]:focus,
	select:focus,
	textarea:focus {
		border-color: var(--accent);
	}

	textarea {
		resize: vertical;
		min-height: 120px;
	}

	.form-actions {
		display: flex;
		gap: 1rem;
		margin-top: 1.8rem;
	}

	.btn-success {
		background: var(--accent);
		color: #fff;
		font-weight: 600;
		padding: 0.75rem 1.5rem;
		border: none;
		cursor: pointer;
		transition: background 0.2s ease, transform 0.2s ease;
		box-shadow: 0 3px 10px rgba(255, 102, 0, 0.25);
	}

	.btn-success:hover {
		background: #e25500;
		transform: translateY(-2px);
	}

	.btn-secondary {
		background: var(--bg-darker);
		color: var(--text-main);
		font-weight: 500;
		padding: 0.75rem 1.5rem;
		border: 1px solid var(--border);
		cursor: pointer;
		transition: background 0.2s ease;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
	}

	.btn-secondary:hover {
		background: #2a2a2d;
	}

	.alert-success {
		background: rgba(34, 197, 94, 0.15);
		border: 1px solid rgba(34, 197, 94, 0.4);
		color: var(--success);
		padding: 0.8rem 1rem;
		margin-bottom: 1.2rem;
		font-weight: 500;
	}

	.alert-error {
		background: rgba(239, 68, 68, 0.15);
		border: 1px solid rgba(239, 68, 68, 0.4);
		color: #ef4444;
		padding: 0.8rem 1rem;
		margin-bottom: 1.2rem;
		font-weight: 500;
	}

	.avantages-box {
		margin-top: 1.2rem;
		padding: 1rem;
		background: var(--bg-darker);
		border: 1px solid var(--border);
		border-radius: 6px;
	}
</style>{% endblock %}{% block body %}
<div class="main-content">
	<div class="dashboard-container">
		<h1>‚ûï Ajouter une licence</h1>

		<div class="section-card">

			{% for message in app.flashes('error') %}
				<div class="alert-error">{{ message }}</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert-success">{{ message }}</div>
			{% endfor %}

			{{ form_start(form) }}

			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.firstName, 'Pr√©nom du licenci√©') }}
				{{ form_widget(form.firstName) }}
				{{ form_errors(form.firstName) }}
			</div>

			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.lastName, 'Nom du licenci√©') }}
				{{ form_widget(form.lastName) }}
				{{ form_errors(form.lastName) }}
			</div>

			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.email, 'Adresse e-mail') }}
				{{ form_widget(form.email) }}
				{{ form_errors(form.email) }}
			</div>

			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.number, 'Num√©ro de licence') }}
				{{ form_widget(form.number) }}
				{{ form_errors(form.number) }}
			</div>

			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.forfait, 'Forfait') }}
				{{ form_widget(form.forfait) }}
				{{ form_errors(form.forfait) }}
			</div>

			<div id="forfait-avantages" class="avantages-box" style="display:none;"></div>

			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.expiryDate, 'Date d‚Äôexpiration') }}
				{{ form_widget(form.expiryDate) }}
				{{ form_errors(form.expiryDate) }}
			</div>

			<div class="form-actions">
				<button class="btn-success">üíæ Enregistrer</button>
				<a href="{{ path('admin_licence_index') }}" class="btn-secondary">‚¨ÖÔ∏è Retour</a>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
</div>

 <script>
document.addEventListener('DOMContentLoaded', () => {
	const selectForfait = document.querySelector('#licence_forfait');
	const avantagesBox = document.getElementById('forfait-avantages');

	if (!selectForfait) return;

	selectForfait.addEventListener('change', async () => {
		const id = selectForfait.value;
		if (!id) {
			avantagesBox.style.display = 'none';
			return;
		}

		avantagesBox.innerHTML = "<p>Chargement des avantages...</p>";
		avantagesBox.style.display = "block";

		try {
			const resp = await fetch(`/admin/licences/forfait/${id}/avantages`);
			const data = await resp.json();

			if (data.avantages && data.avantages.length > 0) {
				avantagesBox.innerHTML = `
					<h4 style="color:#ff6600;">Avantages du forfait <b>${data.nom}</b></h4>
					<ul style="list-style:none;padding-left:0;margin-top:0.5rem;">
						${data.avantages.map(a => `<li>‚úîÔ∏è ${a}</li>`).join('')}
					</ul>
				`;
			} else {
				avantagesBox.innerHTML = `<p style="color:#9ca3af;">Aucun avantage disponible pour ce forfait.</p>`;
			}
		} catch (e) {
			avantagesBox.innerHTML = `<p style="color:#ef4444;">Erreur lors du chargement des avantages.</p>`;
		}
	});
});
</script>{% endblock %}
