{% extends 'admin/base_admin.html.twig' %}

{% block title %}Liste des forfaits
{% endblock %}

{% block stylesheets %}
	<style>:root
	{
		--bg-dark: #0e0e10;
		--bg-darker: #141416;
		--bg-light: #1c1c1f;
		--text-main: #e5e7eb;
		--text-muted: #9ca3af;
		--accent: #ff6600;
		--border: #2a2a2d;
		--success: #22c55e;
	}

	body {
		font-family: "Inter", system-ui, sans-serif;
		background: var(--bg-dark);
		color: var(--text-main);
		margin: 0;
		min-height: 100vh;
	}

	.main-content {
		flex: 1;
		margin-left: 100px;
		padding: 2.5rem 3rem;
		display: flex;
		flex-direction: column;
		background: var(--bg-dark);
		min-height: 100vh;
		box-sizing: border-box;
	}

	/* ---------- CONTAINER ---------- */
	.dashboard-container {
		transform: scale(1.00);
		transform-origin: top left;
		width: 103.8%;
		max-width: none;
		margin-left: 1.5rem;
	}

	.dashboard-container h1 {
		font-size: 2.3rem;
		font-weight: 800;
		color: #fff;
		margin-bottom: 2.5rem;
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	/* ---------- SECTION CARD ---------- */
	.section-card {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 1.5rem 1.3rem;
		margin-bottom: 2rem;
		width: 100%;
		box-sizing: border-box;
	}

	/* ---------- HEADER ---------- */
	.section-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-bottom: 1.2rem;
		border-bottom: 1px solid var(--border);
		padding-bottom: 0.8rem;
	}

	.section-title {
		font-size: 1rem;
		font-weight: 600;
		color: #fff;
		display: flex;
		align-items: center;
		gap: 0.4rem;
	}

	/* ---------- TOOLBAR ---------- */
	.table-toolbar {
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.search-bar {
		padding: 0.45rem 0.8rem;
		border: 1px solid var(--border);
		background: var(--bg-darker);
		color: var(--text-main);
		font-size: 0.9rem;
		outline: none;
	}
	.search-bar:focus {
		border-color: var(--accent);
	}

	.btn-add {
		background: var(--accent);
		color: #fff;
		padding: 0.6rem 1rem;
		border-radius: 6px;
		font-weight: 600;
		text-decoration: none;
		transition: 0.2s ease;
	}
	.btn-add:hover {
		background: #e25500;
		transform: translateY(-2px);
	}

	/* ---------- TABLE ---------- */
	.table {
		width: 100%;
		border-collapse: collapse;
		font-size: 0.9rem;
		color: #e5e7eb;
	}

	.table thead {
		background: var(--bg-darker);
		color: #fff;
	}

	.table th {
		text-align: left;
		padding: 0.8rem 1rem;
		font-weight: 600;
	}

	.table td {
		padding: 0.8rem 1rem;
		border-bottom: 1px solid var(--border);
		vertical-align: top;
	}

	.table tbody tr:hover {
		background: rgba(255, 255, 255, 0.03);
	}

	/* ---------- BUTTONS ---------- */
	.actions {
		display: flex;
		gap: 0.5rem;
	}

	.btn-edit {
		background: #2563eb;
		color: #fff;
		padding: 0.4rem 0.8rem;
		border-radius: 5px;
		text-decoration: none;
	}
	.btn-edit:hover {
		background: #1d4ed8;
	}

	.btn-delete {
		background: #dc2626;
		color: #fff;
		padding: 0.4rem 0.8rem;
		border-radius: 5px;
		border: none;
		cursor: pointer;
	}
	.btn-delete:hover {
		background: #b91c1c;
	}

	/* ---------- EMPTY ---------- */
	.empty-row {
		text-align: center;
		padding: 1.2rem;
		color: var(--text-muted);
	}

	/* ---------- RESPONSIVE ---------- */
	@media(max-width: 900px) {
		.main-content {
			margin-left: 0;
			padding: 1.5rem;
		}
		.table-toolbar {
			flex-direction: column;
			align-items: flex-start;
		}
		.search-bar {
			width: 100%;
		}
	}
</style>{% endblock %}{% block body %}
<div class="main-content">
	<div class="dashboard-container">
		<h1>üèãÔ∏è Liste des forfaits</h1>

		<div class="section-card">
			<div class="section-header">
				<h3 class="section-title">üìã Tous les forfaits</h3>
				<div class="table-toolbar">
					<input type="text" id="searchForfait" class="search-bar" placeholder="Rechercher...">
					<a href="{{ path('admin_forfait_new') }}" class="btn-add">‚ûï Nouveau forfait</a>
				</div>
			</div>

			<table class="table" id="forfaitTable">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Description</th>
						<th>Prix (‚Ç¨)</th>
						<th>Avantages</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for forfait in forfaits %}
						<tr>
							<!-- Nom -->
							<td>{{ forfait.nom }}</td>

							<!-- Description -->
							<td>{{ forfait.description ?? '-' }}</td>

							<!-- Prix -->
							<td>
								{% if forfait.prix is not null %}
									{{ forfait.prix|number_format(2, ',', ' ') }}
									‚Ç¨
								{% else %}
									<em class="text-muted">-</em>
								{% endif %}
							</td>

							<!-- Avantages -->
							<td>
								{% if forfait.avantages is not empty %}
									<ul style="margin:0;padding-left:1.2rem;">
										{% for avantage in forfait.avantages %}
											<li>{{ avantage }}</li>
										{% endfor %}
									</ul>
								{% else %}
									<em class="text-muted">Aucun</em>
								{% endif %}
							</td>

							<!-- Actions -->
							<td>
								<div class="actions" style="display:flex;gap:0.5rem;">
									<a href="{{ path('admin_forfait_edit', {'id': forfait.id}) }}" class="btn-edit">‚úèÔ∏è Modifier</a>
									<form method="post" action="{{ path('admin_forfait_delete', {'id': forfait.id}) }}" onsubmit="return confirm('Supprimer ce forfait ?');">
										<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forfait.id) }}">
										<button class="btn-delete">üóëÔ∏è Supprimer</button>
									</form>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5" class="empty-row">Aucun forfait enregistr√© pour le moment.</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

		</div>
	</div>
</div>

 <script>
function attachSearch(inputSel, tableSel) {
	const input = document.querySelector(inputSel);
	const rows = document.querySelectorAll(tableSel + ' tbody tr');
	if (!input) return;
	input.addEventListener('keyup', () => {
		const q = input.value.toLowerCase();
		rows.forEach(r => {
			r.style.display = r.textContent.toLowerCase().includes(q) ? '' : 'none';
		});
	});
}
attachSearch('#searchForfait', '#forfaitTable');
</script>{% endblock %}
