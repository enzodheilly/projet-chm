{% extends 'admin/base_admin.html.twig' %}

{% block title %}‚ûï Ajouter un forfait
{% endblock %}

{% block stylesheets %}
	<style>:root
	{
		--bg-dark: #0e0e10;
		--bg-darker: #141416;
		--bg-light: #1c1c1f;
		--text-main: #e5e7eb;
		--text-muted: #9ca3af;
		--accent: #ff6600;
		--border: #2a2a2d;
		--success: #22c55e;
	}

	body {
		font-family: "Inter", system-ui, sans-serif;
		background: var(--bg-dark);
		color: var(--text-main);
		margin: 0;
		min-height: 100vh;
	}

	.main-content {
		flex: 1;
		margin-left: 100px;
		padding: 2.5rem 3rem;
		display: flex;
		flex-direction: column;
		background: var(--bg-dark);
		min-height: 100vh;
	}

	.dashboard-container {
		transform: scale(1.00);
		transform-origin: top left;
		width: 158%;
		margin-left: 1.5rem;
	}

	h1 {
		font-size: 2.3rem;
		font-weight: 800;
		color: #fff;
		margin-bottom: 2.5rem;
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.section-card {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 1.8rem;
		max-width: 800px;
		border-radius: 10px;
	}

	label {
		display: block;
		font-weight: 600;
		margin-bottom: 0.5rem;
		color: var(--text-main);
	}

	input[type="text"],
	textarea {
		width: 95%;
		background: var(--bg-darker);
		color: var(--text-main);
		border: 1px solid var(--border);
		padding: 0.7rem 1rem;
		font-size: 0.95rem;
		outline: none;
		transition: border-color 0.2s ease;
		border-radius: 5px;
	}

	input[type="text"]:focus,
	textarea:focus {
		border-color: var(--accent);
	}

	textarea {
		resize: vertical;
		min-height: 120px;
	}

	.form-actions {
		display: flex;
		gap: 1rem;
		margin-top: 1.8rem;
	}

	.btn-success {
		background: var(--accent);
		color: #fff;
		font-weight: 600;
		padding: 0.75rem 1.5rem;
		border: none;
		cursor: pointer;
		transition: background 0.2s ease, transform 0.2s ease;
		box-shadow: 0 3px 10px rgba(255, 102, 0, 0.25);
		border-radius: 6px;
	}

	.btn-success:hover {
		background: #e25500;
		transform: translateY(-2px);
	}

	.btn-secondary {
		background: var(--bg-darker);
		color: var(--text-main);
		font-weight: 500;
		padding: 0.75rem 1.5rem;
		border: 1px solid var(--border);
		cursor: pointer;
		transition: background 0.2s ease;
		text-decoration: none;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		border-radius: 6px;
	}

	.btn-secondary:hover {
		background: #2a2a2d;
	}

	.alert-success {
		background: rgba(34, 197, 94, 0.15);
		border: 1px solid rgba(34, 197, 94, 0.4);
		color: var(--success);
		padding: 0.8rem 1rem;
		margin-bottom: 1.2rem;
		font-weight: 500;
		border-radius: 6px;
	}

	.alert-error {
		background: rgba(239, 68, 68, 0.15);
		border: 1px solid rgba(239, 68, 68, 0.4);
		color: #ef4444;
		padding: 0.8rem 1rem;
		margin-bottom: 1.2rem;
		font-weight: 500;
		border-radius: 6px;
	}

	.avantage-item {
		display: flex;
		align-items: center;
		gap: 10px;
		margin-bottom: 10px;
	}

	.avantage-item input {
		flex: 1;
	}

	.btn-add {
		background: transparent;
		border: 1px dashed var(--accent);
		color: var(--accent);
		padding: 0.4rem 0.8rem;
		border-radius: 5px;
		cursor: pointer;
		transition: 0.2s;
	}

	.btn-add:hover {
		background: rgba(255, 102, 0, 0.1);
	}
	.avantage-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-bottom: 0.5rem;
	}

	.btn-delete {
		background: transparent;
		color: #ef4444;
		border: 1px dashed #ef4444;
		padding: 0.3rem 0.6rem;
		border-radius: 5px;
		cursor: pointer;
		transition: background 0.2s ease;
	}
	.btn-delete:hover {
		background: rgba(239, 68, 68, 0.1);
	}
</style>{% endblock %}{% block body %}
<div class="main-content">
	<div class="dashboard-container">
		<h1>‚ûï Ajouter un forfait</h1>

		<div class="section-card">

			{% for message in app.flashes('error') %}
				<div class="alert-error">{{ message }}</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert-success">{{ message }}</div>
			{% endfor %}

			{{ form_start(form) }}

			<!-- Nom du forfait -->
			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.nom, 'Nom du forfait') }}
				{{ form_widget(form.nom) }}
				{{ form_errors(form.nom) }}
			</div>

			<!-- Description -->
			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.description, 'Description') }}
				{{ form_widget(form.description) }}
				{{ form_errors(form.description) }}
			</div>

			<!-- Prix -->
			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.prix, 'Prix (‚Ç¨ / an)') }}
				{{ form_widget(form.prix) }}
				{{ form_errors(form.prix) }}
			</div>

			<!-- Avantages -->
			<div class="form-group" style="margin-bottom: 1rem;">
				{{ form_label(form.avantages, 'Avantages inclus') }}
				<small class="text-muted d-block mb-2">Ajoute les avantages un par un (ex : "Acc√®s complet √† la salle")</small>

				<div id="avantages-wrapper" data-prototype="{{ form_widget(form.avantages.vars.prototype)|e('html_attr') }}" data-index="{{ form.avantages|length }}">
					{% for avantageField in form.avantages %}
						<div class="avantage-item">
							{{ form_widget(avantageField) }}
							<button type="button" class="btn-delete">‚ùå</button>
						</div>
					{% endfor %}
				</div>

				<button type="button" class="btn-add" id="add-avantage">‚ûï Ajouter un avantage</button>
			</div>

			<!-- Boutons -->
			<div class="form-actions">
				<button class="btn-success">üíæ Enregistrer</button>
				<a href="{{ path('admin_forfait_index') }}" class="btn-secondary">‚¨ÖÔ∏è Retour</a>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
</div>

<!-- Script dynamique pour ajouter/supprimer les avantages -->
 <script>
document.addEventListener('DOMContentLoaded', () => {
	const addBtn = document.getElementById('add-avantage');
	const container = document.getElementById('avantages-wrapper');

	if (!addBtn || !container) return;

	let index = parseInt(container.dataset.index, 10) || 0;
	const prototype = container.dataset.prototype;

	addBtn.addEventListener('click', () => {
		if (!prototype) {
			alert('Erreur : aucun prototype trouv√©.');
			return;
		}

		const newField = prototype.replace(/__name__/g, index);
		const div = document.createElement('div');
		div.classList.add('avantage-item');
		div.innerHTML = newField;

		// Bouton supprimer
		const deleteBtn = document.createElement('button');
		deleteBtn.type = 'button';
		deleteBtn.classList.add('btn-delete');
		deleteBtn.textContent = '‚ùå';
		deleteBtn.addEventListener('click', () => div.remove());

		div.appendChild(deleteBtn);
		container.appendChild(div);
		index++;
	});
});
</script>{% endblock %}
