{% extends 'admin/base_admin.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block stylesheets %}
	<style>:root
	{
		--bg-dark: #0e0e10;
		--bg-darker: #141416;
		--bg-light: #1c1c1f;
		--text-main: #e5e7eb;
		--text-muted: #9ca3af;
		--accent: #ff6600;
		--border: #2a2a2d;
	}

	body {
		font-family: "Inter", system-ui, sans-serif;
		background: var(--bg-dark);
		color: var(--text-main);
		margin: 0;
		min-height: 100vh;
	}

	.main-content {
		flex: 1;
		margin-left: 100px;
		padding: 2.5rem 3rem;
		background: var(--bg-dark);
		min-height: 100vh;
	}

	.dashboard-container {
		transform: scale(1.00); /* au lieu de 1.15 */
		transform-origin: top left;
		width: 167.5%; /* limite le dÃ©bordement */
		margin-left: 1.5rem; /* pour centrer lÃ©gÃ¨rement Ã  cause de la sidebar */
	}

	h1 {
		font-size: 2.3rem;
		font-weight: 800;
		color: #fff;
		margin-bottom: 2.5rem;
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}

	.section-card {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 2rem;
		box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
	}

	form div {
		display: flex;
		flex-direction: column;
		gap: 1.2rem;
	}

	label {
		color: #fff;
		font-weight: 600;
		margin-bottom: 0.3rem;
	}

	input[type="text"],
	textarea {
		background: var(--bg-darker);
		color: var(--text-main);
		border: 1px solid var(--border);
		padding: 0.7rem 1rem;
		font-size: 0.95rem;
		outline: none;
		transition: border-color 0.2s;
	}

	input[type="text"]:focus,
	textarea:focus {
		border-color: var(--accent);
	}

	textarea {
		min-height: 300px;
		resize: vertical;
		line-height: 1.5;
		font-family: "Inter", monospace;
	}

	.btn {
		background: var(--accent);
		color: #fff;
		border: none;
		padding: 0.8rem 1.5rem;
		font-weight: 600;
		font-size: 1rem;
		cursor: pointer;
		transition: 0.25s;
		margin-top: 1rem;
		width: fit-content;
	}

	.btn:hover {
		background: #e25500;
		transform: scale(1.03);
	}

	.flash-success {
		background: rgba(34, 197, 94, 0.1);
		color: #22c55e;
		padding: 0.8rem 1.2rem;
		border: 1px solid rgba(34, 197, 94, 0.3);
		margin-bottom: 1rem;
		font-weight: 600;
		text-align: center;
	}

	@media(max-width: 900px) {
		.main-content {
			margin-left: 0;
			padding: 1.5rem;
		}
		.dashboard-container {
			width: 100%;
			margin-left: 0;
		}
	}
</style>{% endblock %}{% block body %}
<div class="main-content">
	<div class="dashboard-container">
		<h1>ðŸ“„
			{{ title }}</h1>

		{% for message in app.flashes('success') %}
			<div class="flash-success">{{ message }}</div>
		{% endfor %}

		<div class="section-card">
			{{ form_start(form) }}
			{{ form_row(form.title) }}
			{{ form_row(form.slug) }}
			{{ form_row(form.content) }}
			<button class="btn">Enregistrer</button>
			{{ form_end(form) }}
		</div>
	</div>
</div>{% endblock %}
