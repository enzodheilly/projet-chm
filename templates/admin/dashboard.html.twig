{% extends 'admin/base_admin.html.twig' %}
{% block title %}Tableau de bord Admin
{% endblock %}

{% block stylesheets %}
	<style>
	/* ------------------------- LAYOUT G√âN√âRAL ------------------------- */:root
	{
		--bg-dark: #0e0e10;
		--bg-darker: #141416;
		--bg-light: #1c1c1f;
		--text-main: #e5e7eb;
		--text-muted: #9ca3af;
		--accent: #ff6600;
		--border: #2a2a2d;
	}

	body {
		font-family: "Inter", system-ui, sans-serif;
		background: var(--bg-dark);
		color: var(--text-main);
		margin: 0;
		min-height: 100vh;
	}

	/* ‚úÖ Ajustement : marge √† gauche pour la sidebar de 230px */
	.main-content {
		flex: 1;
		margin-left: 100px;
		padding: 2.5rem 3rem;
		display: flex;
		flex-direction: column;
		box-sizing: border-box;
		background: var(--bg-dark);
		min-height: 100vh;
	}

	.dashboard-container {
		width: 100%;
		max-width: none; /* ‚úÖ enl√®ve la limitation */
	}

	/* ------------------------- TITRE ------------------------- */
	.dashboard-container h1 {
		font-size: 2.3rem;
		font-weight: 800;
		color: #fff;
		text-align: left;
		margin-bottom: 2.5rem;
	}

	/* ------------------------- STATS ------------------------- */
	.stats {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1.2rem;
		margin-bottom: 2.5rem;
	}

	.stat-card {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 1.2rem 1rem;
		text-align: center;
		transition: border-color 0.2s ease, transform 0.2s ease;
	}
	.stat-card:hover {
		border-color: var(--accent);
		transform: translateY(-2px);
	}
	.stat-card h3 {
		font-size: 0.9rem;
		color: var(--text-muted);
		margin-bottom: 0.4rem;
		font-weight: 500;
	}
	.stat-card p {
		font-size: 1.6rem;
		font-weight: 700;
		color: #fff;
		margin: 0;
	}

	/* ------------------------- GRAPHIQUES ------------------------- */
	.chart-container {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 1.5rem;
		margin-bottom: 2rem;
		width: 100%;
		box-sizing: border-box;
	}

	/* ------------------------- SECTIONS ------------------------- */
	.section-card {
		background: var(--bg-light);
		border: 1px solid var(--border);
		padding: 1.5rem 1.3rem;
		margin-bottom: 2rem;
		width: 100%;
		box-sizing: border-box;
	}

	.section-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		margin-bottom: 1.2rem;
		border-bottom: 1px solid var(--border);
		padding-bottom: 0.8rem;
	}

	.section-title {
		font-size: 1rem;
		font-weight: 600;
		color: #fff;
	}

	/* ------------------------- TABLES ------------------------- */
	.table {
		width: 100%;
		border-collapse: collapse;
		font-size: 0.9rem;
		color: #e5e7eb;
	}

	.table thead {
		background: var(--bg-darker);
		color: #fff;
	}
	.table th {
		text-align: left;
		padding: 0.8rem 1rem;
		font-weight: 600;
	}
	.table td {
		padding: 0.8rem 1rem;
		border-bottom: 1px solid var(--border);
	}
	.table tbody tr:hover {
		background: rgba(255, 255, 255, 0.03);
	}

	.status-success {
		color: #22c55e;
		font-weight: 600;
	}
	.status-failed {
		color: #ef4444;
		font-weight: 600;
	}

	/* ------------------------- TABLE TOOLBAR ------------------------- */
	.table-toolbar {
		display: flex;
		align-items: center;
		gap: 0.6rem;
	}
	.search-bar {
		padding: 0.45rem 0.8rem;
		border: 1px solid var(--border);
		background: var(--bg-darker);
		color: var(--text-main);
		font-size: 0.9rem;
		outline: none;
	}
	.search-bar:focus {
		border-color: var(--accent);
	}
	.btn {
		background: var(--accent);
		color: #fff;
		border: none;
		padding: 0.5rem 1rem;
		font-weight: 600;
		cursor: pointer;
		transition: 0.2s;
	}
	.btn:hover {
		background: #e25500;
	}

	/* ------------------------- ACTIONS ------------------------- */
	.actions-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		gap: 1rem;
	}
	.action {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.6rem;
		background: var(--bg-darker);
		color: #fff;
		border: 1px solid var(--border);
		padding: 0.7rem 1rem;
		font-weight: 500;
		cursor: pointer;
		transition: all 0.2s ease;
	}
	.action:hover {
		background: var(--bg-light);
		border-color: var(--accent);
	}

	/* ------------------------- ACTIVIT√â ------------------------- */
	.activity-list {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	.activity-item {
		display: flex;
		align-items: flex-start;
		gap: 0.8rem;
	}
	.activity-dot {
		width: 8px;
		height: 8px;
		background: var(--accent);
		margin-top: 0.4rem;
	}
	.activity-text {
		color: #e5e7eb;
		font-weight: 500;
	}
	.activity-date {
		color: #9ca3af;
		font-size: 0.85rem;
	}

	/* ------------------------- RESPONSIVE ------------------------- */
	@media(max-width: 900px) {
		.main-content {
			margin-left: 0;
			padding: 1.5rem;
		}
		.logout-btn {
			position: static;
			margin-bottom: 1rem;
		}
	}

	/* ‚úÖ --- AJOUT POUR AGRANDIR LE CONTAINER ET LES √âL√âMENTS --- */
	.dashboard-container {
		transform: scale(1.00); /* au lieu de 1.15 */
		transform-origin: top left;
		width: 98.622%; /* limite le d√©bordement */
		margin-left: 1.5rem; /* pour centrer l√©g√®rement √† cause de la sidebar */
	}

	.main-content {
		padding: 3rem 3.5rem;
	}

	/* ‚úÖ Texte et √©l√©ments un peu plus grands mais pas exag√©r√©s */
	.dashboard-container h1 {
		font-size: 2.6rem;
	}

	.stat-card h3 {
		font-size: 1rem;
	}

	.stat-card p {
		font-size: 1.8rem;
	}

	.table {
		font-size: 1rem;
	}

	.btn,
	.action {
		padding: 0.7rem 1.2rem;
		font-size: 0.95rem;
	}

	.search-bar {
		font-size: 0.95rem;
		padding: 0.55rem 0.9rem;
	}

	.section-card {
		padding: 1.8rem 1.6rem;
		margin-bottom: 2.2rem;
	}

	/* ‚úÖ Chart.js : taille proportionn√©e */
	canvas {
		width: 100% !important;
		height: 105% !important;
	}

	.chart-container {
		padding: 1.8rem;
	}

	.chartjs-render-monitor {
		font-size: 1.1rem !important;
	}
</style>{% endblock %}{% block body %}

<div class="main-content">

	<div class="dashboard-container">
		<h1>Tableau de bord Administrateur</h1>

		{# ---------- STATS ---------- #}
		<div class="stats">
			<div class="stat-card">
				<h3>Utilisateurs totaux</h3>
				<p>{{ totalUsers|default(0) }}</p>
			</div>
			<div class="stat-card">
				<h3>Comptes v√©rifi√©s</h3>
				<p>{{ verifiedUsers|default(0) }}</p>
			</div>
			<div class="stat-card">
				<h3>Connexions r√©ussies</h3>
				<p>{{ successfulAttempts|default(0) }}</p>
			</div>
			<div class="stat-card">
				<h3>√âchecs r√©cents</h3>
				<p>{{ failedAttempts|default(0) }}</p>
			</div>
			<div class="stat-card">
				<h3>Abonn√©s newsletter</h3>
				<p>{{ newsletterSubscribers|default(0) }}</p>
			</div>
		</div>

		{# ---------- GRAPHIQUES ---------- #}
		<div class="chart-container">
			<canvas id="loginChart" height="90"></canvas>
		</div>
		<div class="chart-container">
			<canvas id="newsletterChart" height="90"></canvas>
		</div>

		{# ---------- ACTIONS RAPIDES ---------- #}
		<div class="section-card">
			<div class="section-header">
				<h3 class="section-title">‚ö° Actions rapides</h3>
			</div>
			<div class="actions-grid">
				<button class="action" onclick="location.href='{{ path('admin_users_new') }}'">‚ûï Cr√©er un utilisateur</button>
				<button class="action" onclick="location.href='{{ path('admin_newsletter_compose') }}'">‚úâÔ∏è Envoyer une newsletter</button>
				<button class="action" onclick="exportTableToCSV('#logTable','journal_connexions.csv')">üì§ Exporter logs</button>
				<button class="action" onclick="exportTableToCSV('#subsTable','abonn√©s_newsletter.csv')">üì§ Exporter abonn√©s</button>
				<button class="action" onclick="location.href='{{ path('admin_security_purge_logs') }}'">üßπ Purger les logs</button>
			</div>
		</div>

		{# ---------- JOURNAL DES CONNEXIONS ---------- #}
		<div class="section-card">
			<div class="section-header">
				<h3 class="section-title">üìã Derni√®res tentatives de connexion</h3>
				<div class="table-toolbar">
					<input type="text" id="searchLogs" class="search-bar" placeholder="Rechercher...">
					<button class="btn" onclick="exportTableToCSV('#logTable','journal_connexions.csv')">Exporter</button>
				</div>
			</div>

			<div class="table-responsive">
				<table class="table" id="logTable">
					<thead>
						<tr>
							<th>ID</th>
							<th>Utilisateur</th>
							<th>Email</th>
							<th>IP</th>
							<th>OS</th>
							<th>Navigateur</th>
							<th>Statut</th>
							<th>Date</th>
						</tr>
					</thead>

					<tbody>
						{% for attempt in recentAttempts %}
							<tr>
								<td>{{ attempt.id }}</td>
								<td>{{ attempt.user ? attempt.user.firstName ~ ' ' ~ (attempt.user.lastName ?? '') : '‚Äî' }}</td>
								<td>{{ attempt.emailAttempt }}</td>
								<td>{{ attempt.ip ?? '‚Äî' }}</td>
								<td>{{ attempt.os ?? '‚Äî' }}</td>
								<td>{{ attempt.browser ?? '‚Äî' }}</td>
								<td class="{{ attempt.success ? 'status-success' : 'status-failed' }}">
									{{ attempt.success ? 'Succ√®s' : '√âchec' }}
								</td>
								<td>{{ attempt.createdAt|date('d/m/Y H:i') }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="8" style="text-align:center;">Aucune tentative trouv√©e.</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
		</div>
		{# ---------- NEWSLETTER ---------- #}
		<div class="section-card">
			<div class="section-header">
				<h3 class="section-title">üì∞ Abonn√©s newsletter</h3>
				<div class="table-toolbar">
					<input type="text" id="searchSubs" class="search-bar" placeholder="Rechercher...">
					<button class="btn" onclick="location.href='{{ path('admin_newsletter_compose') }}'">Nouvelle campagne</button>
				</div>
			</div>

			<div class="table-responsive">
				<table class="table" id="subsTable">
					<thead>
						<tr>
							<th>#</th>
							<th>Utilisateur</th>
							<th>Email</th>
							<th>Statut</th>
							<th>Date d‚Äôinscription</th>
						</tr>
					</thead>
					<tbody>
						{% for s in recentSubscribers|default([]) %}
							<tr>
								<td>{{ loop.index }}</td>
								<td>
									{% if s.user %}
										{{ s.user.firstName ~ ' ' ~ (s.user.lastName ?? '') }}
									{% else %}
										‚Äî
									{% endif %}
								</td>
								<td>{{ s.email }}</td>
								<td>
									{% if s.isConfirmed %}
										<span class="status-success">Confirm√©</span>
									{% else %}
										<span class="status-failed">Non confirm√©</span>
									{% endif %}
								</td>
								<td>{{ s.subscribedAt|date('d/m/Y H:i') }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" style="text-align:center;">Aucun abonn√© r√©cent.</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>


		{# ---------- ACTIVIT√â R√âCENTE ---------- #}
		<div class="section-card">
			<div class="section-header">
				<h3 class="section-title">üïì Activit√© r√©cente</h3>
			</div>
			<div class="activity-list">
				{% for item in recentActivity|default([]) %}
					<div class="activity-item">
						<div class="activity-dot"></div>
						<div>
							<div class="activity-text">{{ item.text|raw }}</div>
							<div class="activity-date">{{ item.date|date('d/m/Y H:i') }}</div>
						</div>
					</div>
				{% else %}
					<div class="activity-item">
						<div class="activity-dot"></div>
						<div>Aucune activit√© pour le moment.</div>
					</div>
				{% endfor %}
			</div>
		</div>

	</div>
</div>

 <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
 <script>
															function toggleMenu(id){
															  const el=document.getElementById(id);
															  el.style.display = (el.style.display==='block')?'none':'block';
															}
															
															/* --------- Recherche tables --------- */
															function attachSearch(inputSel, tableSel){
															  const input=document.querySelector(inputSel);
															  const rows=document.querySelectorAll(tableSel+' tbody tr');
															  if(!input) return;
															  input.addEventListener('keyup',()=>{
															    const q=input.value.toLowerCase();
															    rows.forEach(r=>{ r.style.display = r.textContent.toLowerCase().includes(q)?'':'none'; });
															  });
															}
															attachSearch('#searchLogs','#logTable');
															attachSearch('#searchSubs','#subsTable');
															
															/* --------- Export CSV g√©n√©rique --------- */
															function exportTableToCSV(selector, filename){
															  const rows=[...document.querySelectorAll(selector+' tr')];
															  const csv=rows.map(r=>[...r.querySelectorAll('th,td')].map(c=>('"'+c.textContent.replace(/"/g,'""')+'"')).join(',')).join('\n');
															  const blob=new Blob([csv],{type:'text/csv;charset=utf-8;'});
															  const a=document.createElement('a'); a.href=URL.createObjectURL(blob); a.download=filename; a.click();
															}
															
															/* --------- Donn√©es graphiques (venues du contr√¥leur) --------- */
															const loginsData = {{ loginsSuccessByDay|default([3,5,2,6,4,5,3])|json_encode|raw }};
															const subsData   = {{ newSubscribersByDay|default([1,2,1,3,2,2,1])|json_encode|raw }};
															const labels7    = {{ labels7|default(['Lun','Mar','Mer','Jeu','Ven','Sam','Dim'])|json_encode|raw }};
															
															/* Connexions r√©ussies */
															new Chart(document.getElementById('loginChart'),{
															  type:'line',
															  data:{ labels: labels7, datasets:[{ label:'Connexions r√©ussies', data: loginsData, borderColor:'#ff6600', tension:.35, fill:false }]},
															  options:{ scales:{ y:{ beginAtZero:true } } }
															});
															
															/* Nouveaux abonn√©s */
															new Chart(document.getElementById('newsletterChart'),{
															  type:'bar',
															  data:{ labels: labels7, datasets:[{ label:'Nouveaux abonn√©s', data: subsData, backgroundColor:'#ff6600' }]},
															  options:{ scales:{ y:{ beginAtZero:true } } }
															});
															</script>{% endblock %}
