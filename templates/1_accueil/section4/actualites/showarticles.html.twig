{% extends 'base.html.twig' %}

{% block body %}

	<style>
		/* ---- BANDEAU FIL D'ARIANE ---- */
		.breadcrumb-banner {
			background-color: #f5f5f5;
			width: 100%;
			display: flex;
			align-items: center; /* centre verticalement */
			justify-content: flex-start; /* aligne horizontalement à gauche */
			min-height: 120px;
			margin-top: 117px;
		}

		.breadcrumb-container {
			max-width: 1100px;
			/* margin: 0 auto;  <-- à retirer */
			margin-left: 225px; /* ou adapte selon ton design (20–60px en général) */
			padding: 0 20px;
			font-family: 'Poppins', sans-serif;
			font-size: 0.9rem;
			color: #777;
			display: flex;
			flex-wrap: wrap;
			font-weight: 600;
			gap: 6px;
		}

		.breadcrumb-container a {
			color: #777;
			text-decoration: none;
			transition: color 0.25s ease;
			font-weight: 600;
		}

		.breadcrumb-container a:hover {
			color: #002b5c;
			text-decoration: underline;
		}

		.breadcrumb-container span {
			color: #aaa;
		}

		.breadcrumb-container .current {
			color: #777;
			font-style: italic;
			cursor: default;
		}

		/* ---- ARTICLE DETAIL ---- */
		.article-detail {
			max-width: 900px;
			margin: 60px auto 100px;
			padding: 0 20px;
			font-family: 'Poppins', sans-serif;
			color: #1c1c1c;
		}

		/* ---- Lien retour ---- */
		.article-detail .back-link {
			display: inline-flex;
			align-items: center;
			gap: 6px;
			color: #004a97;
			font-weight: 600;
			text-decoration: none;
			margin-bottom: 25px;
			font-size: 0.95rem;
			transition: color 0.25s ease;
		}

		.article-detail .back-link:hover {
			color: #002b5c;
			text-decoration: underline;
		}

		/* ---- Catégorie ---- */
		.article-detail .article-category {
			display: block;
			text-transform: uppercase;
			color: #e3000b;
			font-weight: 700;
			font-size: 0.9rem;
			margin-bottom: 10px;
			text-align: center;
			letter-spacing: 0.5px;
		}

		/* ---- Titre principal ---- */
		.article-detail h1 {
			font-size: 2.3rem;
			font-weight: 800;
			text-transform: uppercase;
			color: #005b94;
			text-align: center;
			line-height: 1.3;
			margin-bottom: 8px;
		}

		/* ---- Date ---- */
		.article-detail .news-date {
			display: block;
			text-align: center;
			color: #666;
			font-size: 0.95rem;
			margin-bottom: 40px;
		}

		/* ---- Image ---- */
		.article-detail img {
			display: block;
			width: 100%;
			max-height: 500px;
			object-fit: cover;
			border-radius: 8px;
			margin: 0 auto 40px;
			box-shadow: 0 6px 25px rgba(0, 0, 0, 0.08);
		}

		/* ---- Texte ---- */
		.article-detail p {
			font-size: 1.1rem;
			line-height: 1.8;
			color: #333;
			margin-bottom: 1.5rem;
			text-align: justify;
		}

		/* ---- Responsive ---- */
		@media(max-width: 768px) {
			.article-detail {
				margin: 40px 10px 80px;
			}

			.article-detail h1 {
				font-size: 1.6rem;
			}

			.article-detail img {
				max-height: 300px;
			}

			.breadcrumb-container {
				font-size: 0.85rem;
			}
		}

		/* ---- Ligne retour + catégorie ---- */
		.article-header-line {
			position: relative;
			max-width: 900px;
			margin: 0 auto 25px;
			padding: 0 20px;
		}

		/* Lien retour (placé à gauche) */
		.article-header-line .back-link {
			position: absolute;
			left: -290px; /* pousse en dehors du bloc centré */
			top: 0;
			display: inline-flex;
			align-items: center;
			gap: 6px;
			color: #005b94;
			font-weight: 600;
			text-decoration: none;
			font-size: 0.95rem;
			transition: color 0.25s ease;
		}

		.article-header-line .back-link:hover {
			color: #002b5c;
			text-decoration: underline;
		}

		/* Catégorie centrée */
		.article-header-line .article-category {
			display: block;
			text-transform: uppercase;
			color: #e3000b;
			font-weight: 700;
			font-size: 2rem;
			letter-spacing: 0.6px;
			text-align: center;
		}
	</style>

	<!-- Bandeau fil d’Ariane -->
	<section class="breadcrumb-banner">
		<div class="breadcrumb-container">
			<a href="{{ path('home') }}">ACCUEIL</a>
			<span>&gt;</span>
			<a href="{{ path('actualites') }}">ACTUALITÉS</a>
			<span>&gt;</span>
			<span class="current">{{ article.title|upper }}</span>

		</div>
	</section>

	<!-- Contenu principal de l’article -->
	<article class="article-detail">
		<div class="article-header-line">
			<a href="{{ path('actualites') }}" class="back-link">← Retour aux actualités</a>

			{% if article.categorie is defined and article.categorie %}
				<span class="article-category">{{ article.categorie.name|upper }}</span>
			{% endif %}
		</div>

		<h1>{{ article.title }}</h1>
		<span class="news-date">{{ article.publishedAt|date('d F Y') }}</span>

		{% if article.image %}
			<img src="{{ asset(article.image) }}" alt="{{ article.title }}">
		{% endif %}

		<p>{{ article.summary }}</p>

		{% if article.content is defined and article.content %}
			<div class="article-content">
				{{ article.content|raw }}
			</div>
		{% endif %}
	</article>
{% endblock %}
