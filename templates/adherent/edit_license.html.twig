{% block title %}Modifier mon numéro de licence
{% endblock %}

{% block body %}
	<div style="max-width:600px;margin:3rem auto;background:#fff;padding:2rem;border-radius:10px;box-shadow:0 4px 20px rgba(0,0,0,0.1);">
		<h1>🎫 Mettre à jour mon numéro de licence</h1>
		<form method="post">
			<label for="license">Numéro de licence :</label>
			<input type="text" id="license" name="license" value="{{ user.licenseNumber ?? '' }}" style="width:100%;padding:0.6rem;margin-top:0.5rem;border:1px solid #ccc;border-radius:6px;">
			<button type="submit" class="btn btn-primary" style="margin-top:1rem;">Enregistrer</button>
		</form>
	</div>
{% endblock %}
