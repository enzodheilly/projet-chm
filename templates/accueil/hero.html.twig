		}

		.btn-en-savoir-plus:hover {
			color: black;
		}

		.nous-rejoindre {
			background: #0d0d0d;
			color: white;
			padding: 0.55rem 0.7rem;
			border-radius: 0.5rem;
			transition: all 0.3s ease;
			text-decoration: none;
			font-weight: 300;
			margin-top: 1rem;
			display: inline-block;
		}

		.hero-buttons .nous-rejoindre:hover {
			background: #f97316;
			color: black;
		}

		.hero-buttons {
			display: flex;
			gap: 0.75rem; /* ðŸ‘ˆ Ajoute un espace entre les boutons */
			margin-top: 0.75rem;
		}

		/* FFHM */
		.ffhm-container {
			display: flex;
			align-items: center;
			gap: 0.75rem;
			margin-top: 1rem;
		}

		.ffhm-logo {
			height: 95px;
			width: auto;
		}

		@keyframes slideIn {
			from {
				opacity: 0;
				transform: translateX(800px);
			}
			to {
				opacity: 1;
				transform: translateX(0);
			}
		}

		.thin-text {
			font-weight: 300;
		}

		/* Titres */
		.club-title {
			font-weight: 700;
			font-size: 2rem;
			color: white;
			margin: 0;
		}

		.club-subtitle {
			font-size: 1.2rem;
			font-weight: 300;
			color: white;
			margin: 0;
		}

		/* Image Ã  droite */
		.hero-image {
			max-width: 45%;
			margin-top: 85px;
			margin-right: 35px;
			height: auto;
			object-fit: contain;
			border-radius: 1rem;
			box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
		}

		/* responsive */
		@media(max-width:768px) {
			.hero-section {
				flex-direction: column;
				text-align: center;
			}
			.hero-content {
				max-width: 100%;
				margin-bottom: 1rem;
			}
			.hero-image {
				max-width: 90%;
				margin-top: 1rem;
			}
		}
	</style>
{% endblock %}

