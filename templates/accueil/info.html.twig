{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/accueil/info/info.css') }}">
{% endblock %}

{% block body %}

<section id="infos" class="section bg-background">
    <div class="container">
        <div class="section-content">
            <!-- Section Header -->
            <div class="section-header">
                <h2 class="section-title">
                    Informations <span class="text-primary">Pratiques</span>
                </h2>
                <p class="section-description">
                    Découvrez tous les détails pratiques pour rejoindre notre club : 
                    tarifs, horaires, modalités d'inscription et équipements.
                </p>
            </div>

            <!-- Pricing -->
            <div class="pricing-section">
                <h3 class="pricing-title">Tarifs Annuels</h3>
                <div class="pricing-grid">
                    {% for plan in pricing %}
                        <div class="pricing-card {% if plan.popular %}pricing-popular{% endif %}">
                            {% if plan.popular %}
                                <div class="pricing-badge">
                                    <span class="badge-text">Populaire</span>
                                </div>
                            {% endif %}
                            <div class="pricing-header">
                                <h4 class="pricing-plan-title">{{ plan.title }}</h4>
                                <div class="pricing-amount">
                                    <span class="pricing-price">{{ plan.price }}</span>
                                    <span class="pricing-period">{{ plan.period }}</span>
                                </div>
                            </div>
                            <div class="pricing-content">
                                <ul class="pricing-features">
                                    {% for feature in plan.features %}
                                        <li class="pricing-feature">
                                            <div class="feature-bullet"></div>
                                            {{ feature }}
                                        </li>
                                    {% endfor %}
                                </ul>
                                <button class="btn {% if plan.popular %}btn-hero{% else %}btn-athletic{% endif %} btn-full">
                                    S'inscrire
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Schedule -->
            <div class="info-schedule-section">
                <div class="info-schedule-card">
                    <div class="info-schedule-header">
                        <div class="info-schedule-icon">
                            <i data-lucide="clock" class="icon"></i>
                        </div>
                        <h3 class="info-schedule-title">Horaires d'Ouverture</h3>
                    </div>
                    <div class="info-schedule-content">
                        <div class="info-schedule-grid">
                            {% for schedule in schedules %}
                                <div class="info-schedule-day">
                                    <h4 class="info-day-name">{{ schedule.day }}</h4>
                                    <div class="info-sessions">
                                        {% for session in schedule.sessions %}
                                            <div class="info-session">
                                                <p class="info-session-time">{{ session.time }}</p>
                                                <p class="info-session-type">{{ session.type }}</p>
                                                <p class="info-session-level">{{ session.level }}</p>
                                            </div>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Requirements -->
            <div class="requirements-section">
                <h3 class="requirements-title">Modalités d'Inscription</h3>
                <div class="requirements-grid">
                    <div class="requirement-card">
                        <div class="requirement-content">
                            <div class="requirement-icon">
                                <i data-lucide="user-check" class="icon"></i>
                            </div>
                            <h4 class="requirement-title">Certificat médical</h4>
                            <p class="requirement-description">Obligatoire pour la pratique sportive</p>
                        </div>
                    </div>
                    <div class="requirement-card">
                        <div class="requirement-content">
                            <div class="requirement-icon">
                                <i data-lucide="credit-card" class="icon"></i>
                            </div>
                            <h4 class="requirement-title">Licence FFH</h4>
                            <p class="requirement-description">Incluse dans la cotisation annuelle</p>
                        </div>
                    </div>
                    <div class="requirement-card">
                        <div class="requirement-content">
                            <div class="requirement-icon">
                                <i data-lucide="dumbbell" class="icon"></i>
                            </div>
                            <h4 class="requirement-title">Équipement</h4>
                            <p class="requirement-description">Tenue de sport, chaussures adaptées</p>
                        </div>
                    </div>
                </div>
                
<div class="requirements-action">
    <a href="https://mail.google.com/mail/?view=cm&fs=1&to=contact@chmsaleux.fr" 
       target="_blank" 
       class="btn btn-hero btn-lg">
       Contactez-nous pour plus d'infos
    </a>
</div>

            </div>
        </div>
    </div>
</section>

{% endblock %}